<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.DuxTask" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.DuxTask.Headline1">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white_minimal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DuxTask.Headline2">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white_minimal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DuxTask.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white_minimal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DuxTask.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.DuxTask.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.DuxTask.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.DuxTask" parent=""/>

    <style name="Widget.DuxTask.EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/input_selector</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.DuxTask.Button" parent="Widget.MaterialComponents.Button"/>

    <style name="Widget.DuxTask.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white_minimal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.DuxTask.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="strokeColor">@color/blue_accent</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.DuxTask.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/graphite_light</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>