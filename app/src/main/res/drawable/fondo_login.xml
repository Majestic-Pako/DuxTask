<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/graphite_dark"/>
        </shape>
    </item>

    <item
        android:width="400dp"
        android:height="400dp"
        android:gravity="top|end"
        android:top="-100dp"
        android:end="-100dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:startColor="#333B82F6"
                android:centerColor="#1A3B82F6"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <item
        android:width="300dp"
        android:height="300dp"
        android:gravity="bottom|start"
        android:bottom="-80dp"
        android:start="-80dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#2660A5FA"
                android:centerColor="#1360A5FA"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>
